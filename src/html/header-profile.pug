header.header.header--profile
	.container.header__main
		.logo
			img(src="img/logo.svg", alt="SBOX")
			.logo__title Powered by SAFEDATA.dev
		.account-bar
			.notifications
				a(href="#" data-popup-target="popup-notifications").btn.notifications__btn
